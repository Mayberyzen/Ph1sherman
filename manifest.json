{
  "manifest_version": 3,
  "name": "Ph1sherman - Site Safety Check",
  "version": "1.0",
  "description": "Automatically checks if a site is safe using Google Safe Browsing API.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
